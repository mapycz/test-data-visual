<Map background-color="white">
    <Parameters>
        <Parameter name="sizes">256, 256</Parameter>
        <Parameter name="bbox">-1, -1, 1, 1</Parameter>
    </Parameters>
    <Style name="1">
        <Rule>
            <TextSymbolizer
                placement="point"
                fill="black"
                face-name="DejaVu Sans Book"
                size="10"
                text-mode="mono"
                >
                "Lorem ipsum"
                <Format size="12">" dolor sit amet,\n"</Format>
                <Format size="12" face-name="DejaVu Sans Bold">" consectetur adipisici elit, \n"</Format>
                <Format size="10" face-name="DejaVu Sans Bold">" sed eiusmod tempor incidunt \n"</Format>
            </TextSymbolizer>
        </Rule>
    </Style>
    <Layer name="1">
        <StyleName>1</StyleName>
        <Datasource>
            <Parameter name="type">csv</Parameter>
            <Parameter name="inline">
                x, y
                0, 0
            </Parameter>
        </Datasource>
    </Layer>
</Map>
