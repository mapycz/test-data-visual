<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map background-color="white">

    <Parameters>
        <Parameter name="sizes">512, 512</Parameter>
        <Parameter name="bbox">-1, -1, 10, 10</Parameter>
    </Parameters>

    <Layer name="layer">
        <StyleName>1</StyleName>
        <Datasource>
            <Parameter name="type">csv</Parameter>
            <Parameter name="inline">
                wkt
                "POLYGON((0 0, 1 0, 1 1, 0 1, 0 0))"
                "POLYGON((2 0, 3 0, 3 3, 2 3, 2 0))"
                "POLYGON((4 0, 5 0, 5 5, 4 5, 4 0))"
                "POLYGON((6 0, 7 0, 7 7, 6 7, 6 0))"
                "POLYGON((8 0, 9 0, 9 9, 8 9, 8 0))"
            </Parameter>
        </Datasource>
    </Layer>

    <Style name="1">
        <Rule>
            <LineSymbolizer
                stroke-width="2"
                stroke="red"
                />
            <TextSymbolizer
                size="12"
                face-name="DejaVu Sans Book"
                placement="line"
                spacing="20"
                allow-overlap="true"
                minimum-path-length="600"
                >
                "minimum-path-length"
            </TextSymbolizer>
        </Rule>
    </Style>

</Map>


