<Map srs="+init=epsg:32633">
    <Parameters>
        <Parameter name="sizes">1024,1024</Parameter>
    </Parameters>

    <Style name="lines">
        <Rule>
            <LineSymbolizer
                stroke="red"
                />
        </Rule>
    </Style>

    <Style name="labels">
        <Rule>
            <GroupSymbolizer
                start-column="1"
                num-columns="2"
                placement="line-max-angle"
                max-line-angle="50"
                max-line-angle-distance="50"
                spacing="100"
                allow-overlap="true"
                >
                <PairLayout item-margin="1"/>
                <GroupRule>
                    <MarkersSymbolizer
                        file="image://square"
                        />
                    <TextSymbolizer
                        face-name="DejaVu Sans Book"
                        size="16"
                        placement="point"
                        dy="10">
                        "Text"
                    </TextSymbolizer>
                    <TextSymbolizer
                        face-name="DejaVu Sans Book"
                        size="16"
                        placement="point"
                        dy="-10">
                        "2.0"
                    </TextSymbolizer>
                </GroupRule>
            </GroupSymbolizer>
        </Rule>
    </Style>

    <Layer name="layer" srs="+init=epsg:32633">
        <StyleName>lines</StyleName>
        <StyleName>labels</StyleName>
        <Datasource>
            <Parameter name="type">csv</Parameter>
            <Parameter name="file">../../data/csv/curvy-lines.csv</Parameter>
        </Datasource>
    </Layer>
</Map>
