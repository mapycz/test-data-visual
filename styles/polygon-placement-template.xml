<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
    <Parameters>
        <Parameter name="sizes">512, 512</Parameter>
    </Parameters>

    <Layer name="layer" srs="+proj=latlong +datum=WGS84">
        <StyleName>lines</StyleName>
        <Datasource>
            <Parameter name="type">csv</Parameter>
            <Parameter name="inline">
                wkt
                "POLY"
            </Parameter>
        </Datasource>
    </Layer>

    <Style name="lines">
        <Rule>
            <LineSymbolizer
                stroke="red"
                stroke-width="1"
                />

            <MarkersSymbolizer
                placement="interior"
                ignore-placement="true"
                allow-overlap="true"
                fill="blue"
                width="15"
                height="15"
                />
            <MarkersSymbolizer
                placement="point"
                ignore-placement="true"
                allow-overlap="true"
                fill="green"
                width="15"
                height="15"
                />
            <MarkersSymbolizer
                placement="polylabel"
                ignore-placement="true"
                allow-overlap="true"
                fill="red"
                width="15"
                height="15"
                />

            <TextSymbolizer
                placement="interior"
                placement-type="simple"
                placements="C,N,S,W,E,NE,SE,NW,SW"
                face-name="DejaVu Sans Book"
                size="12"
                fill="blue"
                halo-radius="1"
                halo-fill="white"
                dx="12"
                dy="12"
                >
                "Interior"
            </TextSymbolizer>
            <TextSymbolizer
                placement="centroid"
                placement-type="simple"
                placements="C,N,S,W,E,NE,SE,NW,SW"
                face-name="DejaVu Sans Book"
                size="12"
                fill="green"
                halo-radius="1"
                halo-fill="white"
                dx="12"
                dy="12"
                >
                "Centroid"
            </TextSymbolizer>
            <TextSymbolizer
                placement="polylabel"
                placement-type="simple"
                placements="C,N,S,W,E,NE,SE,NW,SW"
                face-name="DejaVu Sans Book"
                size="12"
                fill="red"
                halo-radius="1"
                halo-fill="white"
                dx="12"
                dy="12"
                >
                "Polylabel"
            </TextSymbolizer>
        </Rule>
    </Style>
</Map>
